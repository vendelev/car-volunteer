{
    "name": "vendelev/carrier",
    "description": "TelegramBot для автоматизации логистики авто-волонтеров",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^3.9.1",
        "doctrine/doctrine-bundle": "^2.13.0",
        "doctrine/doctrine-migrations-bundle": "^3.3.1",
        "doctrine/orm": "^3.2.2",
        "psr/container": "^2.0.2",
        "ramsey/uuid": "^4.7.6",
        "symfony/console": "^7.0.10",
        "symfony/dotenv": "^7.0.10",
        "symfony/flex": "^2.4.6",
        "symfony/framework-bundle": "^7.0.10",
        "symfony/monolog-bundle": "^3.10.0",
        "symfony/property-access": "7.0.8",
        "symfony/runtime": "^7.0.8",
        "symfony/serializer": "7.0.9",
        "symfony/yaml": "^7.0.8",
        "telegram-bot/api": "^2.5.0",
        "telephantast/message-bus": "*",
        "vendelev/hardcore-php": "dev-start"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.43",
        "phpstan/phpstan": "^1.12.3",
        "phpunit/phpunit": "^9.6.20",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.10.2",
        "symfony/browser-kit": "~7.0.8",
        "symfony/css-selector": "~7.0.8",
        "symfony/phpunit-bridge": "^7.1.4"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/vendelev/HardcorePhp"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "CarVolunteer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CarVolunteer\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.0.*"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "clear": [
            "bin/console cache:clear"
        ],
        "fix": [
            "composer normalize --diff",
            "composer bump",
            "vendor/bin/phpcbf"
        ],
        "hardclear": [
            "rm -rf ./var/cache/*"
        ],
        "phpcs": [
            "vendor/bin/phpcs"
        ],
        "phpstan": [
            "vendor/bin/phpstan"
        ],
        "test": [
            "@clear",
            "@phpcs",
            "@phpstan"
        ]
    }
}
